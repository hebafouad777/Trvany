<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ratingBarStyle">@style/foodRatingBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="radioButtonStyle">@style/MyRadioButtonStyle</item>
        <!--<item name="android:acti>onButtonStyle">@style/MyActionButtonStyle</item>-->
        <!--<item name="actionBarStyle">@style/ActionBarStyle</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="buttonStyle">@style/MyButton</item>-->
        <!--<item name="android:radioButtonStyle">@style/RadioButton</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@color/yellow</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:width">22dp</item>
    </style>

    <style name="smallRatingBar" parent="android:style/Widget.Material.RatingBar.Small"></style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    
    <!--<style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--<item name="colorPrimary"></item>-->
    <!--</style>-->
    <!--<style name="MyActionButtonStyle" parent="AppTheme">-->
        <!--<item name="android:minWidth">20dip</item>-->
        <!--<item name="android:padding">0dip</item>-->
    <!--</style>-->

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:background="@color/gray_bg"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="@string/add_a_significant_sign"
            android:textColor="@color/orange"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edittextSign"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="24dp"
            android:background="@drawable/edit_text_curve"
            android:textColor="#000"
            android:hint="@string/write_a_hint_place"
            android:padding="8dp" />

        <Button
            android:id="@+id/buttonSubmitSign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/green"
            android:text="@string/submit"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonCancelSign"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/orange" />
    </LinearLayout>
</LinearLayout>